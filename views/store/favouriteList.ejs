<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-red-600 mb-2">Your Favourites</h1>
      <p class="text-gray-600">Your saved properties and dream destinations</p>
    </div>

    <!-- Favourites Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% favouriteHomes.forEach(home => { %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden">
          <!-- Image -->
          <div class="relative">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" 
                 class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300">
          </div>

          <!-- Content -->
          <div class="p-5">
            <h3 class="text-xl font-semibold text-gray-800 mb-2 line-clamp-2">
              <%= home.houseName %>
            </h3>
            
            <p class="text-gray-500 mb-3 flex items-center text-sm">
              <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
              <%= home.location %>
            </p>

            <!-- Rating and Price -->
            <div class="flex justify-between items-center mb-4">
              <div class="flex items-center">
                <i class="fas fa-star text-yellow-400 mr-1"></i>
                <span class="text-sm text-gray-700 font-medium"><%= home.rating %></span>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold text-gray-800">â‚¹<%= home.price %></p>
                <p class="text-xs text-gray-500">per night</p>
              </div>
            </div>

            <!-- Remove Button -->
            <form action="/favourites/delete/<%= home._id %>" method="POST">
              <button type="submit" 
                      class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 flex items-center justify-center">
                <i class="fas fa-heart-broken mr-2"></i>
                Remove from Favourites
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Empty State -->
    <% if (favouriteHomes.length === 0) { %>
      <div class="text-center py-16">
        <div class="mb-4">
          <i class="fas fa-heart text-6xl text-gray-300"></i>
        </div>
        <h3 class="text-xl font-medium text-gray-600 mb-2">No favourites yet</h3>
        <p class="text-gray-500 mb-4">Start exploring and save your dream homes!</p>
        <a href="/homes" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200">
          Browse Homes
        </a>
      </div>
    <% } %>
  </main>
</body>
</html>