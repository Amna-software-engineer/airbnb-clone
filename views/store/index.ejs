<%- include('../partials/head')%>

  <body class="bg-gray-50">
    <%- include('../partials/nav') %>

      <main class="container mx-auto px-4 py-8 max-w-7xl">
        <!-- Header Section -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-red-600 mb-2">Welcome to Airbnb</h1>
          <p class="text-gray-600 text-lg">Discover amazing places to stay around the world</p>
        </div>

        <!-- Homes Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <div
              class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group">
              <!-- Image -->
              <div class="relative overflow-hidden">
                <img src="<%= home.photo %>" alt="<%= home.houseName %>"
                  class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300">
                <div class="absolute top-3 right-3">
                   <%- include('../partials/favourite', {home: home}) %>
                </div>
              </div>

              <!-- Content -->
              <div class="p-5">
                <h3 class="text-xl font-semibold text-gray-800 mb-2 line-clamp-1">
                  <%= home.houseName %>
                </h3>

                <p class="text-gray-500 mb-3 flex items-center text-sm">
                  <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                  <%= home.location %>
                </p>

                <!-- Rating and Price -->
                <div class="flex justify-between items-center mb-4">
                  <div class="flex items-center">
                    <i class="fas fa-star text-yellow-400 mr-1"></i>
                    <span class="text-sm text-gray-700 font-medium">
                      <%= home.rating %>
                    </span>
                  </div>
                  <div class="text-right">
                    <p class="text-xl font-bold text-gray-800">$<%= home.price %>
                    </p>
                    <p class="text-sm text-gray-500">per night</p>
                  </div>
                </div>

                <!-- Book Button -->
                <button
                  class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                  Book Now
                </button>
              </div>
            </div>
            <% }) %>
        </div>

        <!-- Empty State -->
        <% if (registeredHomes.length===0) { %>
          <div class="text-center py-16">
            <div class="mb-4">
              <i class="fas fa-home text-6xl text-gray-300"></i>
            </div>
            <h3 class="text-xl font-medium text-gray-600 mb-2">No homes available</h3>
            <p class="text-gray-500">Check back later for amazing places to stay!</p>
          </div>
          <% } %>
      </main>
  </body>

  </html>