<%- include('../partials/head')%>

    <body>
        <%- include('../partials/nav')%>

            <main class="container mx-auto flex items-center justify-center mt-10">
                <div class="shadow-lg w-[500px] flex justify-center flex-col gap-4 px-8 py-8">
                    <h1 class="text-3xl text-red-500 font-bold text-center mb-6"> Login </h1>
                    <form action="/login" method="POST"
                        class="flex justify-center flex-col space-y-6">
                        <input type="email" name="email" placeholder="Enter Email"
                            class="shadow-lg rounded px-2 py-3 focus:outline-none focus:ring-2 focus:ring-red-500 mb-3" />
                        <input type="password" name="password" placeholder="Enter Password"
                            class="shadow-lg rounded px-2 py-3 focus:outline-none focus:ring-2 focus:ring-red-500 mb-3" />
                        <input type="submit"
                            class="bg-red-500 w-32 mx-auto mb-8 mt-24 py-2 text-white rounded cursor-pointer hover:bg-red-600"
                            value="Login" />
                    </form>

                </div>
            </main>
    </body>

    </html>