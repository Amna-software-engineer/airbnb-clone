<%- include('../partials/head') %>
<body class="bg-gray-50 font-sans text-gray-800">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-12">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden p-8 space-y-6">
      <h1 class="text-4xl font-extrabold text-red-600 text-center mb-2">Signup</h1>
      <p class="text-center text-sm text-gray-500 mb-6">Create your account to get started</p>

      <form action="/signup" method="POST" class="space-y-5">
        <% if(errorMsgs && errorMsgs.length > 0 ){ %>
          <div class="bg-red-200 p-4 text-red-700">
            <% errorMsgs.forEach(err => { %>
             <li><%= err %></li>
            <% }) %>
          </div>
          <% } %>
        <input type="text" name="firstName" placeholder="First Name"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 transition" value="<%= oldInputs ? oldInputs.firstName : '' %>" required/>
        
        <input type="text" name="lastName" placeholder="Last Name"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 transition" value="<%= oldInputs ? oldInputs.lastName : '' %>" required/>
        
        <input type="email" name="email" placeholder="Email Address"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 transition" value="<%= oldInputs ? oldInputs.email : '' %>" required/>
        
        <input type="password" name="password" placeholder="Password"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 transition" required/>
        
        <input type="password" name="confirmPassword" placeholder="Confirm Password"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 transition" required/>
        
        <div class="flex items-center gap-4">
          <span class="text-sm font-medium">Choose Your Role:</span>
          <label class="flex items-center gap-1">
            <input type="radio" name="userType" value="host" id="host"
             <%= oldInputs && oldInputs.userType === 'host' ? 'checked' : '' %>  />
            <span>Host</span>
          </label>
          <label class="flex items-center gap-1">
            <input type="radio" name="userType"  value="guest"  id="guest" <%= oldInputs && oldInputs.userType === 'guest' ? 'checked' : '' %> />
            <span>Guest</span>
          </label>
        </div>

        <div class="flex items-center gap-2">
          <input type="checkbox" name="terms" id="terms" required class="accent-red-500" />
          <label for="terms" class="text-sm">I agree to the terms & conditions</label>
        </div>

        <button type="submit"
          class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
          Sign Up
        </button>
      </form>
      <!-- Extra Links -->
      <div class="text-center text-sm text-gray-500">
        Already have an account?
        <a href="/login" class="text-red-500 hover:underline">Login</a>
      </div>
    </div>
  </main>
</body>
