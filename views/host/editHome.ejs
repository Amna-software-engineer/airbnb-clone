<%- include('../partials/head')%>

  <body>
    <%- include('../partials/nav')%>

      <main class="container mx-auto flex items-center justify-center mt-6">
        <div class="shadow-lg w-[500px] flex justify-center flex-col gap-4 px-8 py-4">

          <h1 class="text-3xl text-red-500 font-bold text-center">
            <%= editing ?'Edit': 'Register' %> your home here:
          </h1>

          <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST"
            class="flex justify-center flex-col space-y-4">
            <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">

            <input type="text" name="houseName" placeholder="Enter the name of your house"
              class="shadow-lg rounded px-2 py-3 focus:outline-none focus:ring-2 focus:ring-red-500 mb-3"
              value="<%= editing ? home.houseName :''%>" />
            <input type="number" name="price" placeholder="Enter Price Per Night"
              class="shadow-lg rounded px-2 py-3 focus:outline-none focus:ring-2 focus:ring-red-500"
              value="<%= editing ? home.price:''%>" />
            <input type="text" name="location" placeholder="Enter Location"
              class="shadow-lg rounded px-2 py-3 focus:outline-none focus:ring-2 focus:ring-red-500"
              value="<%= editing ? home.location:''%>" />
            <input type="text" name="rating" placeholder="Enter Rating"
              class="shadow-lg rounded px-2 py-3 focus:outline-none focus:ring-2 focus:ring-red-500"
              value="<%= editing ? home.rating:''%>" />
            <input type="text" name="photoUrl" placeholder="Enter Photo Url"
              class="shadow-lg rounded px-2 py-3 focus:outline-none focus:ring-2 focus:ring-red-500"
              value="<%= editing ? home.photoUrl:''%>" />
            <textarea name="description" placeholder="Describe your home"
              class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= editing ? home.description : ''%></textarea>

            <input type="submit"
              class="bg-red-500 w-32 mx-auto mb-8 mt-20 py-2 text-white rounded cursor-pointer hover:bg-red-600"
              value="<%= editing ?' Update Home' :'Add Home' %>" />
          </form>

        </div>
      </main>
  </body>

  </html>